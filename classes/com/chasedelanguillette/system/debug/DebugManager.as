package com.chasedelanguillette.system.debug{	import flash.display.*;	import flash.events.*;	import com.chasedelanguillette.system.debug.*;		public class DebugManager extends Object	{		public static var stageRef:Stage;		public static var debugLayer:Sprite;				public static var width:int;		public static var height:int;				public static function init(stageRef:Stage, showFPS:Boolean = true):void		{			DebugManager.stageRef = stageRef;			if (!DebugManager.stageRef) throw(new Error("trying to initialize DebugManager without first setting a stage reference"));						debugLayer = new Sprite();			width = stageRef.stageWidth;			height = stageRef.stageHeight			DebugManager.stageRef.addChild(debugLayer);						ScreenPrint.init(DebugManager.debugLayer);						if ( showFPS )			{				var fps:FPSCounter = new FPSCounter();				stageRef.addChild(fps);			}		}				public static function update():void		{			ScreenPrint.update();		}	}}